@model ProductsViewModel
@{
    ViewData["Title"] = Model.Product!.Title;
}

<section id="ProductDetails">
    <div class="container">

        <div class="productDetails">
            <div class="productImages">
                <img src="@Model.Product.PrimaryImage" alt="@Model.Product.Title">
                <div class="imageThumbnails">
                    <button class="favoriteButton"><i class="fa-solid fa-heart"></i></button>

                </div>
            </div>

            <div class="productInfo">
                <h3>@Model.Product.Title</h3>
                <p>@Model.Product.Ingress</p>

                <div class="productContent">
                    <div class="descriptionTitle">
                        <h3>Description</h3>
                        <p>@Model.Product.Description</p>
                    </div>
                </div>

                <div class="bottom">
                    <div class="price">
                        <p class="priceTitle">Total Price</p>
                        <p class="price">$@Model.Product.Price</p>
                    </div>

                    <button class="addToCartButton">Add to cart</button>
                </div>
            </div>
        </div>
    </div>
</section>
