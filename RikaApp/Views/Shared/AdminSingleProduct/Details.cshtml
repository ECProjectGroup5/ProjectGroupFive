@model ProductsViewModel
@{
    ViewData["Title"] = Model?.Product?.Title ?? "Unknown Product";
}

<section id="editProduct">
    <div class="container">
        <h2>Edit Product</h2>
        <form asp-controller="AdminSingleProduct" asp-action="UpdateProduct" method="post">

            <input type="hidden" asp-for="Product!.ArticleNumber"/>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="Product.Title" value="@Model!.Product!.Title" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="ingress">Ingress</label>
                <textarea id="ingress" name="Product.Ingress" class="form-control">@Model.Product.Ingress</textarea>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="Product.Description" class="form-control">@Model.Product.Description</textarea>
            </div>

            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" id="price" name="Product.Price" value=@Model.Product.Price.ToString("F2") class="form-control" required />
            </div>

            <div class="form-group">
                <label for="discountPrice">Discount Price</label>
                <input type="text" id="discountPrice" name="Product.DiscountPrice" class="form-control" value=@Model.Product.DiscountPrice.ToString("F2") />
            </div>

            <div class="form-group">
                <label for="manufacturer">Manufacturer</label>
                <input type="text" id="manufacturer" name="Product.Manufacturer" value="@Model.Product.Manufacturer" class="form-control" />
            </div>

            <div class="form-group">
                <label for="primaryImage">Primary Image URL</label>
                <input type="text" id="primaryImage" name="Product.PrimaryImage" value="@Model.Product.PrimaryImage" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Update Product</button>
        </form>
        <div class="admin-single-delete">
            <form asp-controller="AdminSingleProduct" asp-action="DeleteProduct" asp-route-articleNumber="@Model.Product.ArticleNumber" method="post">
                <button type="submit" class="delete-product-button btn btn-danger">Delete</button>
            </form>
        </div>

    </div>
</section>
